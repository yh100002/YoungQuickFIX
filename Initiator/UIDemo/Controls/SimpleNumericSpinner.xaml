<UserControl x:Class="UIDemo.Controls.SimpleNumericSpinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto"
>
    <Grid x:Name="ContentGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="textbox" Grid.RowSpan="2" Height="Auto" Width="Auto" BorderBrush="#7B8A9C" Margin="0,0,1,0" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextChanged="textbox_TextChanged"></TextBox>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button IsTabStop="False" Margin="0,0,1,0" Grid.Column="1" Click="UpButton_Click" Content="u"/>
            <Button IsTabStop="False" Margin="0,0,1,0" Grid.Column="1" Grid.Row="1" Click="DownButton_Click" Content="d"/>
        </StackPanel>
    </Grid>
</UserControl>
